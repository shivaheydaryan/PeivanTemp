@model IEnumerable<ViewModel.InstituteSmallVM>


@{
    int Total_item, Total_page, Current_page;
    Total_item = ViewBag.Total_item;
    Total_page = ViewBag.Total_page;
    Current_page = ViewBag.Current_page + 1;
    MyClass.ImgUrlCreator ImgCreator = new MyClass.ImgUrlCreator();
}


<div id="divscrollto" class="title mb-3 text-right">
    <h4>نتیجه جستجوی شما...</h4>
    <hr>
    <p>@Total_item مورد یافت شد</p>
</div>
<div  class="row">
    <div class="wrapper d-none">
        <div class="spinner">
            <h5>لطفا چند لحظه صبر کنید...</h5>
            <br>
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
    @foreach (var item in Model)
    {


        <div class="col-md-3 col-sm-6">
            <div class="card mytime-2s wow fadeInUp fast">
                @{ 
                    
                    string main_pic_src = ImgCreator.InstituteGetURL(item.id);
                }
                <a href="@Url.Action("institute","Home",new {id=item.id } )"><img class="card-img-top" src="@Url.Content(main_pic_src)" alt="@item.name"></a>
                <div class="card-body">
                    <a href="@Url.Action("institute","Home",new {id=item.id } )">
                        <h6 class="school-name">@item.InstituteKindName   @item.name</h6>
                        <p class="address">@item.address</p>
                        <span class="cross">@item.InstituteKindName</span>
                        @if (item.boyOrGirl == true || item.boyOrGirl == null)
                        {
                            <span class="gener">پسرانه</span>
                        }
                        else
                        {
                            <span class="gener">دخترانه</span>
                        }
                        


                    </a>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("institute","Home",new {id=item.id } )">
                        اطلاعات بیشتر&nbsp;
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </div>
            </div>
        </div>


    }
        </div>
<nav aria-label="Page navigation" dir="ltr" id="myPagination">
    @*@Html.PagedListPager(Model, page => "#", new PagedListRenderOptions { FunctionToTransformEachPageLink = (liTag, aTag) => { aTag.Attributes.Add("data-page-no", aTag.InnerHtml); liTag.AddCssClass("page-item"); aTag.Attributes.Add("class", "page-link"); liTag.InnerHtml = aTag.ToString(); return liTag; } })*@
            
    
    <ul class="pagination justify-content-center">

        @{
            App_Start.PagerCreator pager = new App_Start.PagerCreator();
            string result_pager = pager.PagerCreator_Span(Current_page, Total_page, "#divscrollto");
        }

        @Html.Raw(result_pager)
        
        
            </ul>



        </nav>

