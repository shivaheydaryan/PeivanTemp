
@{
    ViewBag.Title = "register_institute";
    Layout = "~/Views/Shared/Layout/_Site.cshtml";
}

<!-- Header -->
<header class="masthead register-ins">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="head-title text-center pt-5 wow fadeIn fast">
                    <h2>ثبت نام مرکز آموزشی</h2>
                    <p>لطفا موارد زیر را با دقت مطالعه کنید</p>
                </div>
            </div>
        </div>
    </div>
</header>

@if (ViewBag.ErrorMsg != null)
{
    <div class="alert alert-@ViewBag.ClassName fade in ">
        <a href="#" class="close pull-left" data-dismiss="alert" aria-label="close">&times;</a>
        @ViewBag.msg
    </div>
}
<!-- Register Body -->
@using (@Html.BeginForm("Addregister_institute", "Home", FormMethod.Post))
{
    <div id="register-institute">
        <div class="container">

            <div class="card">
                <p>در این قسمت مدیران مراکز آموزشی می توانند جهت درخواست سیستم پیوندیار و همچنین اضافه شدن به صفحه ی مراکز آموزشی در سایت پیوندیار که قابلیت مشاهده برای عموم را دارد، اقدام نمایند.</p>
                <ul>
                    <li>اطلاعات شخصی (کد ملی و شماره تلفن همراه) شما در پیوندیار محفوظ می ماند.</li>
                    <li>لطفا تمامی اطلاعات خواسته شده را با دقت تکمیل کنید لذا در صورت مغایرت اطلاعات شما با واقعیت، درخواست شما پذیرفته نخواهد شد.</li>
                    <li>جهت تکمیل اطلاعات صفحه کلید رایانه را بر روی زبان فارسی قرار دهید.</li>
                </ul>
                <div class="title mb-3 text-right">
                    <h4>ثبت مرکز آموزشی</h4>
                    <hr>
                    <p style="line-height: 28px;">اطلاعات خواسته شده را پر کنید.</p>
                </div>
                <div class="row register-info">
                    <div class="col-md-6 group-one">
                        <input name="InstituteName" class="form-control input-customize" type="text" placeholder="نام آموزشگاه" required>
                        <input name="InstituteType" class="form-control input-customize" type="text" placeholder="نوع آموزشگاه" required>
                        <input name="AcceptCode" class="form-control input-customize" type="text" placeholder="کد مجوز" required>
                        <input name="ManagerName" class="form-control input-customize" type="text" placeholder="نام و نام خانوادگی مدیر" required>
                        <input name="CodeMelli" class="form-control input-customize" type="text" placeholder="کد ملی" required>
                    </div>
                    <div class="col-md-6 group-one">
                        <input name="Mobile" class="form-control input-customize" type="text" placeholder="شماره تلفن همراه" required>
                        <input name="Tell" class="form-control input-customize" type="text" placeholder="شماره تلفن ثابت" required>
                        <input name="Ostan" class="form-control input-customize" type="text" placeholder="استان" required>
                        <input name="City" class="form-control input-customize" type="text" placeholder="شهر" required>
                        <input name="Address" class="form-control input-customize" type="text" placeholder="آدرس" required>
                    </div>
                </div>

                <!-- btn Ok-Or-Not -->
                <div class="ok-or-not">
                    <button class="btn btn-primary" type="submit">
                        <span class="fas fa-check-circle" aria-hidden="true"></span>&nbsp;ثبت درخواست
                    </button>
                </div>
            </div> <!-- Card -->
        </div>
    </div>
}
