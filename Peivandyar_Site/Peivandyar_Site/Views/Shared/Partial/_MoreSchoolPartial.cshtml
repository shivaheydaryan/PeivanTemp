@model IEnumerable<ViewModel.InstituteSmallVM>
    @{ 
        MyClass.ImgUrlCreator ImgCreator = new MyClass.ImgUrlCreator();
    }
<!-- School Card -->
<div id="school-card" class="pt-3 pb-4">
    <div class="container">
        <div class="title mb-3 text-right">
            <h4>مراکز آموزشی منتخب</h4>
            <hr>
            <p>شما بعضی از مراکز آموزشی را مشاهده می کنید ، برای مشاهده بیشتر بروی <strong>بیشتر ببینید</strong> کلیک کنید</p>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card mytime-2s wow fadeInRight fast">
                        @{
                            string main_pic_src = ImgCreator.InstituteGetURL(item.id);
                            
                        }
                        <a href="@Url.Action("institute","Home",new {id=item.id } )"><img class="card-img-top" src="@Url.Content(main_pic_src)" alt="@item.name"></a>
                        <div class="card-body">
                            <a href="@Url.Action("institute","Home",new {id=item.id } )">
                                <h6 class="school-name">@item.InstituteKindName  @item.name</h6>
                                <p class="address">@item.address</p>
                                @if (item.boyOrGirl == true )
                                {
                                    <span class="gener">پسرانه</span>
                                }
                                else if(item.boyOrGirl == false)
                                {
                                    <span class="gener">دخترانه</span>
                                }
                                else if (item.boyOrGirl == null)
                                {
                                    <span class="gener"> دخترانه و پسرانه</span>
                                }
                            </a>
                        </div>
                        <div class="card-footer text-center">
                            <a href="@Url.Action("institute","Home",new {id=item.id } )">
                                اطلاعات بیشتر&nbsp;
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="see-more mt-4 d-flex justify-content-center">
            <a href="@Url.Action("institutes","Home",null)" class="btn btn-primary">بیشتر ببینید...</a>
        </div>
    </div>
</div>