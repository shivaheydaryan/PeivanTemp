<!-- Article Card -->
@using (@Html.BeginForm("SendContact", "Home", FormMethod.Post))
{
    <div id="contact-card" class="pt-3 pb-4">
        <div class="container">
            <div class="title mb-3 text-right">
                <h4>ارسال انتقادات و پیشنهادات</h4>
                <hr>
                <p style="line-height: 28px;">برای ارتقاع سطح کیفی پیوندیار در ارائه ی خدمت مطلوب تر با ارسال پیشنهادات و گزارش هرگونه مشکل ، ما را در این راه یاری کنید. تیم پشتیبانی پیوندیار در اسرع وقت در جهت رفع مشکلات و همچنین اعمال پیشنهادات و انتقادات شما تمام تلاش خود را به کار می گیرد.</p>

                @{ 
                    ViewModel.ViewBagError msg = new ViewModel.ViewBagError();
                    if (TempData["msg"] != null)
                    {
                        msg = (ViewModel.ViewBagError)TempData["msg"];
                    }
                }
                @if(TempData["msg"] != null)
                {
                    <div class="alert alert-@msg.ClassName">
                        @msg.Msg
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group wow fadeInUp faster">
                        <input name="Name" class="form-control textbox-control" placeholder="نام شما (اجباری)" type="text" required>
                    </div>
                    <div class="form-group wow fadeInUp faster">
                        <input name="Email" class="form-control textbox-control" placeholder="ایمیل (اجباری)" type="email" required>
                    </div>
                    <div class="form-group wow fadeInUp faster">
                        <input name="Subject" class="form-control textbox-control" placeholder="موضوع" type="text">
                    </div>
                    <div class="choose-problem text-right wow fadeInUp faster">
                        <select name="Type" class="custom-select my-selecoptin" id="inputGroup" aria-label="send problem" required>
                            <option value="0" selected>پیشنهاد</option>
                            <option value="1">انتقاد</option>
                            <option value="2">گزارش مشکل و ایراد</option>
                            <option value="3">سایر</option>
                        </select>
                    </div>
                    <div class="input-group wow fadeInUp faster">
                        <textarea name="Comment" class="text-area" placeholder="متن خود را در اینجا بنویسید..." rows="4" aria-label="With textarea"></textarea>
                    </div>
                </div>
                <div class="col-md-2 col-sm-5 text-right">
                    <div class="send-us wow fadeInUp faster">
                        <button class="btn btn-primary" type="submit"><i class="far fa-envelope-open"></i>&nbsp;ارسال</button>
                    </div>
                </div>
                <div class="col-md-10 col-sm-7 text-right">
                    <div class="accept wow fadeInUp faster">
                        <p>با ارسال درخواست، شما با قوانین پیوندیار موافقت کرده اید.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
                    }

