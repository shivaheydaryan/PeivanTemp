            </a>
        </li>

        <li class="link">
            <a href="@Url.Action("Index","Messages")">
                <span class="fa fa-envelope"></span>
                <span class="hidden-xs">پیام ها</span>
                <span class="label label-success pull-left hidden-xs right-noti-msg">۲۰</span>
            </a>
        </li>

        <li class="link">
            <a href="@Url.Action("Index","Note")">
                <span class="fa fa-file-text"></span>
                <span class="hidden-xs">یادداشت ها</span>
                <span class="label label-success pull-left hidden-xs right-noti-msg">۶۹</span>
            </a>
        </li>

        <li class="link settings-btn">
            <a href="setting.html">
                <span class="fa fa-cog"></span>
                <span class="hidden-xs">تنظیمات</span>
            </a>
        </li>


    </ul>
</div>
<script src="~/Scripts/jquery.js"></script>
<script>
    $(document).ready(function (ev) {

        loadinstitutelist();
    });



    //  Load Notification
    function loadinstitutelist() {

        $.ajax
            ({
                url: "/Dashboard/InstituteList",
                contentType: "application/html; charset=utf-8",
                type: "GET",
                cache: !0,
                datatype: 'html',
                success: function (data) {

                    if (!jQuery.isEmptyObject(data)) {
                        $("#collapse-classes").append(data);
                        $("#header_classes").addClass("hidden")
                    }
                    else {
                        $("#header_classes").addClass("hidden")
                    }


                },
                error: function () {
                    $("#header_classes").addClass("hidden")
                }
            })
    }

</script>
